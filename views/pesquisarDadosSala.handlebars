<div class="container-table-exibicao">
    <h1>Informações da Sala</h1>
    {{#if sala.length}}
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">Local da Sala</th>
                <th scope="col">Capacidade de Alunos</th>
                <th scope="col">Computadores</th>
                <th scope="col">Projetor</th>
                <th scope="col">Lousa Interativa</th>
                <th scope="col">Material</th>
                <th scope="col">Coffee Break</th>
            </tr>
        </thead>
        <tbody>
            {{#each sala}}
            <tr>
                <td>{{this.localSala}}</td>
                <td>{{this.capacidadeAlunos}}</td>
                <td>{{this.computadores}}</td>
                <td>{{this.projetor}}</td>
                <td>{{this.lousaInterativa}}</td>
                <td>{{this.material}}</td>
                <td>{{this.radio}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <h3 class="ms-3">1 - Sim</h3>
    <h3 class="ms-3">0 - Não</h3>
    {{else}}
        <p class="text-sm-left text-md-center text-lg-right">Nenhum registro encontrado para a sala pesquisada.</p>
    {{/if}}
</div>
