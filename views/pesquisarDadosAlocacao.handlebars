<div class="container-table-exibicao">
    <h1>Informações da Sala Alocada</h1>
    {{#if alocacao.length}}
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">Local da Sala</th>
                <th scope="col">Instrutor</th>
                <th scope="col">Curso</th>
                <th scope="col">Data</th>
                <th scope="col">Hora Inicial</th>
                <th scope="col">Hora Final</th>
            </tr>
        </thead>
        <tbody>
            {{#each alocacao}}
            <tr>
                <td>{{this.localSala}}</td>
                <td>{{this.nomeInstrutor}}</td>
                <td>{{this.nomeCurso}}</td>
                <td>{{this.anoMesDia}}</td>
                <td>{{this.horaInicial}}</td>
                <td>{{this.horaFinal}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
     {{else}}
        <p class="text-sm-left text-md-center text-lg-right">Nenhum registro encontrado para a sala pesquisada.</p>
    {{/if}}
</div>
