    <main>

        <div class="container-form">
            <h1 class="fw-bold text-center mt-3">Cadastro de Sala</h1>
            <form id="formulario" method="post">
                    <div class="mb-3 ms-3 me-3">
                        <label for="localSala" class="form-label">Local da Sala:</label>
                        <input type="text" class="form-control" name="localSala" id="localSala" placeholder="Local da Sala"
                            required>
                    </div>

                    <div class="mb-3 ms-3 me-3">
                        <label for="capacidadeAluno" class="form-label">Capacidade de alunos:</label>
                        <input type="number" min="1" class="form-control" name="capacidadeAluno" id="capacidadeAluno"
                            placeholder="Capacidade de alunos" required>
                    </div>

                    <div class="form-check ms-3 me-3">
                        <label>Recursos da sala:</label><br>
                        <input class="form-check-input" type="checkbox" value="marcado" name="flexComputadores" id="flexComputadores">
                        <label class="form-check-label" for="flexComputadores" id="flexComputadores">
                            Computadores
                        </label>
                    </div>

                    <div class="form-check ms-3 me-3">
                        <input class="form-check-input" type="checkbox" value="marcado" name="flexProjetor" id="flexProjetor">
                        <label class="form-check-label" for="flexProjetor">
                            Projetor
                        </label>
                    </div>

                    <div class="form-check ms-3 me-3">
                        <input class="form-check-input" type="checkbox" value="marcado" name="flexLousaInterativa" id="flexLousaInterativa">
                        <label class="form-check-label" for="flexLousaInterativa">
                            Lousa Interativa
                        </label>
                    </div>

                    <div class="form-check ms-3 me-3">
                        <input class="form-check-input" type="checkbox" value="marcado" name="flexMaterial" id="flexMaterial">
                        <label class="form-check-label" for="flexMaterial">
                            Material (lápis, canetas, borrachas, papel)
                        </label>
                    </div>
                    <br>
                    <div class="form-check ms-3 me-3">
                        <label>Área para Coffee Break?</label><br>
                        <input class="form-check-input" type="radio" value="sim" name="flexRadioCoffee"
                            id="flexRadioSim" required>
                        <label class="form-check-label" for="flexRadioSim">
                            Sim
                        </label>
                    </div>

                    <div class="form-check ms-3 me-3">
                        <input class="form-check-input" type="radio" value="nao" name="flexRadioCoffee"
                            id="flexRadioNao" required>
                        <label class="form-check-label" for="flexRadioNao">
                            Não
                        </label>
                    </div>
                
                <button type="submit" class="btn btn-primary ms-3">Salvar</button>
                
            </form>
        </div>

