    <div class="container-table-exibicao">
    <h1>Salas Alocadas</h1>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">Nome da Sala: </th>
                    <th scope="col">Nome do Instrutor: </th>
                    <th scope="col">Sobrenome do Instrutor: </th>
                    <th scope="col">Nome do Curso: </th>
                    <th scope="col">Local da Sala: </th>
                    <th scope="col">Data: </th>
                    <th scope="col">Hora Inicial: </th>
                    <th scope="col">Hora Final:</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <td>{{this.nomeSala}}</td>
                    <td>{{this.nomeInstrutor}}</td>
                    <td>{{this.sobrenomeInstrutor}}</td>
                    <td>{{this.nomeCurso}}</td>
                    <td>{{this.localSala}}</td>
                    <td>{{this.anoMesDia}}</td>
                    <td>{{this.horaInicial}}</td>
                    <td>{{this.horaFinal}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>